color = color or require "color"

local tbl
local hueCyclesPerSecond = .1
tbl = {
    backAndForth = {
        colors = function(_, _, frameCount)
            return { color.hsv(frameCount * tbl.backAndForth.frameDurations * hueCyclesPerSecond * 256 % 256, 255, 255) }
        end,
        frameSize = { 5, 1 },
        frames = {
            { 1, 1 },
            { 1, 3 },
            { 1, 5 },
            { 1, 7 },
            { 1, 9 },
            { 1, 7 },
            { 1, 5 },
            { 1, 3 },
        },
        frameDurations = 1 / 30
    },
    ["repeat"] = {
        colors = {
            { 255, 255, 255 },
            { 255, 0, 0 },
            { 0, 255, 0 },
            { 0, 0, 255 },
            { 255, 255, 255 },
        },
        frameSize = { 5, 1 },
        frames = {
            { 1, 1 },
            { 1, 3 },
            { 1, 5 },
            { 1, 7 },
            { 1, 9 },
        },
        frameDurations = 1 / 5
    }
}

return tbl
